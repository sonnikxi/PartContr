<Window x:Class="PartCont.Description"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PartCont"
        mc:Ignorable="d"
        Title="Просмотр описания" Height="650" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
            <Label x:Name="contName" HorizontalAlignment="Center" FontSize="20" Margin="0,30,0,0">Описание контракта</Label>
            <TextBlock x:Name="DescText" Width="700" Height="450" FontSize="17" Margin="0,30,0,0" Background="#FFF7F7F7">  </TextBlock>
        </StackPanel>
    </Grid>
</Window>
