<Window x:Class="PartCont.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PartCont"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label FontSize="22" Margin="10">Контракты:</Label>
            <Button x:Name="CLookEdit" FontSize="16" Height="26" Width="300" HorizontalAlignment="Left" Margin="20,0,0,0" Background="{x:Null}" Click="CLookEdit_Click">Просмотр и редактирование</Button>
            <Button x:Name="CAdd" FontSize="16" Height="26" Width="300" HorizontalAlignment="Left" Margin="20,20,0,0" Background="{x:Null}" Click="CAdd_Click">Добавление</Button>
            <!-- <Button x:Name="CActive" FontSize="16" Height="26" Width="300" HorizontalAlignment="Left" Margin="20,20,0,0" Background="{x:Null}">Активные контракты</Button> -->
           

            <Label FontSize="22" Margin="10,50,10,10">Партнёры:</Label>
            <Button x:Name="PLookEdit" FontSize="16" Height="26" Width="300" HorizontalAlignment="Left" Margin="20,0,0,0" Background="{x:Null}" Click="PLookEdit_Click">Просмотр и редактирование</Button>
            <Button x:Name="PAdd" FontSize="16" Height="26" Width="300" HorizontalAlignment="Left" Margin="20,20,0,0" Background="{x:Null}" Click="PAdd_Click">Добавление</Button>
            <!-- <Button x:Name="PEmail" FontSize="16" Height="26" Width="300" HorizontalAlignment="Left" Margin="20,20,0,0" Background="{x:Null}">Контакты (почта)</Button> -->


        </StackPanel>
        
    </Grid>
</Window>
